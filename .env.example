# DECK CORE Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/deck_core"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
OAUTH_SERVER_URL="http://localhost:3000"
OWNER_OPEN_ID="your-owner-open-id"

# App Configuration
VITE_APP_ID="deck-core"
VITE_APP_TITLE="DECK CORE"
VITE_APP_LOGO="https://your-domain.com/logo.png"

# Application Environment
NODE_ENV="development"

# External APIs
BUILT_IN_FORGE_API_URL="https://your-forge-api.com"
BUILT_IN_FORGE_API_KEY="your-forge-api-key"

# Analytics (optional)
VITE_ANALYTICS_ENDPOINT="https://your-analytics.com"
VITE_ANALYTICS_WEBSITE_ID="your-website-id"

# OAuth Portal (if using)
VITE_OAUTH_PORTAL_URL="https://your-oauth-portal.com"

# Optional: External API Keys (if needed in future)
# SCRYFALL_API_KEY=""
# TCGPLAYER_API_KEY=""
# POKEMON_API_KEY=""

# Optional: Email Configuration (for future features)
# SMTP_HOST=""
# SMTP_PORT=""
